<% if !@user.admin? %>
  <h2><%= @user.name %> | Park Visitor</h2>
  <p><strong>Mood:</strong> <%= @user.mood %></p>
  <p><strong>Height:</strong> <%= @user.height %></p>
  <p><strong>Tickets:</strong> <%= @user.tickets %></p>
  <h4><%= link_to "See attractions", attractions_path %>
  <%= link_to "Log Out", logout_path, method: :delete %>
<% else %>
  <h2><%= @user.name %> | ADMIN</h2>
  <h4><%= link_to "See attractions", attractions_path %></h4>
  <%= link_to "Log Out", logout_path, method: :delete %>
<% end %>
